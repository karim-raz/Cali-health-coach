<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:id="@+id/log548"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editTextch"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        
        android:hint="@string/log19993"
        style="@style/EditTextsplashprogress"
        android:textCursorDrawable="@drawable/cursor_red" >
    </EditText>

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextch"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:divider="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/editTextch"
        android:layout_toLeftOf="@+id/editTextch"
        android:src="@drawable/loop" />

</RelativeLayout>